                        content += "\"</th>";
                        content += "</tr>";
                        content += "</thead>";
                        content += "<tbody>";
                        content += "<tr>";
                        content += "<td class=\"text-left\">" + result.CompanyId + "</td>";
                        content += "<td class=\"text-left\">" + result.SoQD_ThuHoiDat_Goc + "</td>";
