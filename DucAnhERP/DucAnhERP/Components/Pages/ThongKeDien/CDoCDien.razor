    // Hàm xử lý logic khi người dùng dừng nhập
    //bắt sự kiện khi thay đổi
    private System.Timers.Timer _typingTimer;
    private int _debounceDelay = 1000; // Thời gian đợi sau khi người dùng dừng nhập (ms)

    // Hàm được gọi sau khi bind-value hoàn tất
    private void OnValueChanged()
    {
        // Dừng Timer cũ nếu đang chạy
        _typingTimer?.Stop();

        // Khởi động Timer mới
        _typingTimer = new System.Timers.Timer(_debounceDelay);
        _typingTimer.Elapsed += async (_, _) =>
        {
            _typingTimer.Stop();
            await InvokeAsync(OnTypingStopped); // Gọi hàm xử lý khi người dùng dừng nhập
        };
        _typingTimer.AutoReset = false;
        _typingTimer.Start();
    }
    private async Task OnTypingStopped()
    {
        await Caculate();
    }
    public async Task Caculate()
    {
        Input.DinhMong = DinhMong(Input.HienTrangTKD, Input.CCTKDDDinhMong);
        Input.DinhLotMong = DinhLotMong(Input.DinhMong, Input.CDMong);
        Input.DinhDayDao = DinhDayDao(Input.DinhLotMong, Input.CDLotMong);
        await InvokeAsync(() => { StateHasChanged(); });
    }
    private double DinhMong(double HienTrangTKD, double CCTKDDDinhMong)
    {
        double result = Math.Round((HienTrangTKD - CCTKDDDinhMong), 4);
        return Math.Ceiling(result * 100) / 100;
    }
    private double DinhLotMong(double DinhMong, double CDMong)
    {
        double result = Math.Round((DinhMong - CDMong), 4);
        return Math.Ceiling(result * 100) / 100;
    }
    private double DinhDayDao(double DinhLotMong, double CDLotMong)
    {
        double result = Math.Round((DinhLotMong - CDLotMong), 4);
        return Math.Ceiling(result * 100) / 100;
    }

