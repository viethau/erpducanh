    private double KLLM_XD_KL(double KLLM_XD_Dai, double KLLM_XD_Rong, double KLLM_XD_Cao)
    {
        double result = Math.Round((KLLM_XD_Dai * KLLM_XD_Rong * KLLM_XD_Cao),4);
        return Math.Ceiling(result * 100) / 100;
    }
    private double KLLM_VK_KL(double KLLM_XD_Dai, double KLLM_XD_Cao, double KLLM_VK_SLCD, double KLLM_XD_Rong, double KLLM_VK_SLCR)
