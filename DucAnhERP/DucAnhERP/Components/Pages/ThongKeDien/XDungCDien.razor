    {
        await Caculate();
    }
    public async Task Caculate()
    {
        Input.KLLM_XD_KL = KLLM_XD_KL(Input.KLLM_XD_Dai, Input.KLLM_XD_Rong, Input.KLLM_XD_Cao);
        Input.KLLM_VK_KL = KLLM_VK_KL(Input.KLLM_XD_Dai, Input.KLLM_XD_Cao, Input.KLLM_VK_SLCD, Input.KLLM_XD_Rong, Input.KLLM_VK_SLCR);
