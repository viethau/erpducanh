        double result = Math.Round((KLLM_XD_Dai * KLLM_XD_Cao * KLLM_VK_SLCD) + (KLLM_XD_Rong * KLLM_XD_Cao * KLLM_VK_SLCR),4);
        result = Math.Ceiling(result * 100) / 100;
        return result;
    }
    private double KLM_XD_KL(double KLM_XD_Dai, double KLM_XD_Rong, double KLM_XD_Cao)
