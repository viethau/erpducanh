@code {

    private bool isLoading = false;
    private NuocMuaModel Input = new NuocMuaModel();

    private List<SelectedItem> selectPLDayHoGa = new();
    private List<SelectedItem> selectLoaiVLDao = new();
    private string layoutClass = "d-flex justify-content-between";
    private string space = "ml-5";
    private string thumbtack = "";

    private void OnSelectChange(SelectedItem selectedItem)
    {
        Input.ThongTinTamDanHoGa2_PhanLoaiDayHoGa = selectedItem.Value;
    }
    private void OnSelectChangeTD(SelectedItem selectedItem)
    {
        Input.ThongTinDuongTruyenDan_HinhThucTruyenDan = selectedItem.Value;
    }

    public List<NuocMuaModel> listNuocMuaModelLeft { get; set; } = new();
    public List<NuocMuaModel> listModelLeft { get; set; } = new();
    public MetaData MetaData { get; set; }
    public NuocMuaModel nuocMuaModel { get; set; }

    public List<NuocMuaModel> listNuocMuaModelRight { get; set; } = new();
    public List<NuocMuaModel> listModelRight { get; set; } = new();

    // Khởi tạo màn hình
    protected override async Task OnInitializedAsync()
    {
        nuocMuaModel = new();
        await LoadData();
        selectPLDayHoGa = new();
        foreach (var item in listModelLeft)
        {
            // Kiểm tra xem item đã tồn tại trong danh sách selectPLDayHoGa hay chưa
            if (!selectPLDayHoGa.Any(x => x.Value == item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
            {
                if (!string.IsNullOrEmpty(item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
                {
                    // Nếu chưa tồn tại, thêm item vào danh sách
                    selectPLDayHoGa.Add(new SelectedItem
                        {
                            Value = item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa,
                            Text = item.PhanLoaiTDHoGa_PhanLoaiDayHoGa
                        });
                }
            }

            // Kiểm tra và thêm item vào selectLoaiVLDao nếu chưa tồn tại
            if (!string.IsNullOrEmpty(item.ThongTinVatLieuDaoHoGa_LoaiVatLieuDao) &&
                !selectLoaiVLDao.Any(x => x.Value == item.ThongTinVatLieuDaoHoGa_LoaiVatLieuDao))
            {
                selectLoaiVLDao.Add(new SelectedItem
                    {
                        Value = item.ThongTinVatLieuDaoHoGa_LoaiVatLieuDao,
                        Text = item.ThongTinVatLieuDaoHoGa_LoaiVatLieuDao
                    });
            }

        }
        // Thêm phần tử mặc định "chọn..."
        selectPLDayHoGa.Insert(0, new SelectedItem { Value = "", Text = "Chọn...", IsSelected = true });
        selectLoaiVLDao.Insert(0, new SelectedItem { Value = "", Text = "Chọn...", IsSelected = true });
    }
    // Truy vấn data theo điều kiện tìm kiếm
    private async Task LoadData()
    {
        isLoading = true;
        Input.TraiPhai = 0;
        var nuocMuaRepositoryLeft = await NuocMuaRepository.GetBaoCaoKLBPhapHGa(Input);
        listModelLeft = nuocMuaRepositoryLeft;
        listNuocMuaModelLeft = Paging(listModelLeft, listNuocMuaModelLeft);
        Input.TraiPhai = 0;
        var nuocMuaRepositoryRight = await NuocMuaRepository.GetBaoCaoKLBPhapHGa(Input);
        listModelRight = nuocMuaRepositoryRight;
        listNuocMuaModelRight = Paging(listModelRight, listNuocMuaModelRight);

        isLoading = false;
    }
    public async Task Search()
    {
        nuocMuaModel.PageNumber = 1;
        await LoadData();
    }

    // Sắp xếp data
    private void SortTable(string columnName)
    {
        listModelLeft = SortService.SortTable(listModelLeft, columnName);
        nuocMuaModel.PageNumber = 1;
        Paging(listModelLeft, listNuocMuaModelLeft);
    }

    // Get css cho chức năng sắp xếp
    private string GetSortStyle(string columnName)
    {
        return SortService.GetSortStyle(columnName);
    }

    // Xử lý trường hợp đổi page hiển thị
    private void SelectedPageLeft(int page)
    {
        nuocMuaModel.PageNumber = page;
        Paging(listModelLeft, listNuocMuaModelLeft);
    }
    // Xử lý trường hợp đổi page hiển thị
    private void SelectedPageRight(int page)
    {
        nuocMuaModel.PageNumber = page;
        Paging(listModelRight, listNuocMuaModelRight);
    }
    // Xử lý trường hợp đổi số lượng bản ghi hiển thị trên page
    private void ChangePageSizeLeft(int pageSize)
    {
        nuocMuaModel.PageNumber = 1;
        nuocMuaModel.pageSize = pageSize;
        Paging(listModelLeft, listNuocMuaModelLeft);
    }
    private void ChangePageSizeRight(int pageSize)
    {
        nuocMuaModel.PageNumber = 1;
        nuocMuaModel.pageSize = pageSize;
        Paging(listModelRight, listNuocMuaModelRight);
    }

    // Xử lý paging
    private List<NuocMuaModel> Paging(List<NuocMuaModel> listModels, List<NuocMuaModel> listCurrentModels)
    {
        // Đếm số bản ghi thỏa mãn
        var count = listModels.Count();

        // Lọc bản ghi theo page hiện tại và page size
        listModels = listModels.Skip((nuocMuaModel.PageNumber - 1) * nuocMuaModel.PageSize).Take(nuocMuaModel.PageSize).ToList();

        // Xóa danh sách đang hiển thị trên màn hình
        listCurrentModels.Clear();

        // Thêm những bản ghi sau khi lọc vào danh sách hiển thị
        foreach (var major in listModels)
        {
            listCurrentModels.Add(major);
        }

        // Tạo pagelist mới

        var pagelist = new PageList<NuocMuaModel>(listCurrentModels, count, nuocMuaModel.PageNumber, nuocMuaModel.PageSize);
        MetaData = pagelist.MetaData;
        return listModels;
    }

    private void ViewHorizontal()
    {
        layoutClass = "d-flex justify-content-between";
        space = "ml-5";
    }

    private void ViewVertical()
    {
        layoutClass = "d-block";
        space = "m-0";
    }
    private void ThumbtackHeader()
    {
        thumbtack = thumbtack == "flex-header" ? "" : "flex-header";
    }
