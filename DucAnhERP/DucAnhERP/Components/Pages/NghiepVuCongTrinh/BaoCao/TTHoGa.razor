    // Khởi tạo màn hình
    protected override async Task OnInitializedAsync()
    {
        nuocMuaModelLeft = new();
        nuocMuaModelRight = new();
        await LoadData();
        selectPLDayHoGa = new();
        foreach (var item in listModelLeft)
        {
            // Kiểm tra xem item đã tồn tại trong danh sách selectPLDayHoGa hay chưa
            if (!selectPLDayHoGa.Any(x => x.Value == item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
            {
                if (!string.IsNullOrEmpty(item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
                {
                    // Nếu chưa tồn tại, thêm item vào danh sách
                    selectPLDayHoGa.Add(new SelectedItem
                        {
                            Value = item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa,
                            Text = item.PhanLoaiTDHoGa_PhanLoaiDayHoGa
                        });
                }
            }

            // Kiểm tra và thêm item vào selectHTTruyenDan nếu chưa tồn tại
            if (!string.IsNullOrEmpty(item.ThongTinDuongTruyenDan_HinhThucTruyenDan) &&
                !selectHTTruyenDan.Any(x => x.Value == item.ThongTinDuongTruyenDan_HinhThucTruyenDan))
            {
                selectHTTruyenDan.Add(new SelectedItem
                    {
                        Value = item.ThongTinDuongTruyenDan_HinhThucTruyenDan,
                        Text = item.ThongTinDuongTruyenDan_HinhThucTruyenDan_Name
                    });
            }
        }

        foreach (var item in listModelRight)
        {
            // Kiểm tra xem item đã tồn tại trong danh sách selectPLDayHoGa hay chưa
            if (!selectPLDayHoGa.Any(x => x.Value == item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
            {
                if (!string.IsNullOrEmpty(item.ThongTinTamDanHoGa2_PhanLoaiDayHoGa))
                {
                    // Nếu chưa tồn tại, thêm item vào danh sách
                    selectPLDayHoGa.Add(new SelectedItem
