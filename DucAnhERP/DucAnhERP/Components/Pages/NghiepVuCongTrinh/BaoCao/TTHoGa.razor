        }

        // Tạo pagelist mới

        var pagelist = new PageList<NuocMuaModel>(listCurrentModels, count, nuocMuaModelRight.PageNumber, nuocMuaModelRight.PageSize);
        MetaData = pagelist.MetaData;
        return listModels;
