    // Truy vấn data theo điều kiện tìm kiếm
    private async Task LoadData()
    {
        isLoading = true;
        Input.TraiPhai = 0;
        var nuocMuaRepositoryLeft = await NuocMuaRepository.GetBaoCaoTTHoGa(Input);
        listModelLeft = nuocMuaRepositoryLeft;
