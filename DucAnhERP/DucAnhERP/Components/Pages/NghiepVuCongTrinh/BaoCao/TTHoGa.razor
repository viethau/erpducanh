            <button class="btn btn-sm btn-primary me-2" @onclick="View" title="@(viewLeft == "d-block" ? "Xem bảng phải" : "Xem bảng trái")">
                @if (viewLeft == "d-block")
                {
                    <i class="fas fa-arrow-right"></i>
                }
                else
                {
                    <i class="fas fa-arrow-left"></i>
                }
            </button>
            <!-- Nút hiển thị cả hai bảng -->
            <button class="btn btn-sm btn-primary me-2" @onclick="ViewAll" title="Xem cả hai bảng">
                <i class="fas fa-columns"></i>
            </button>
            <button class="btn btn-sm btn-primary me-2" @onclick="ViewHorizontal" title="Xem theo chiều ngang">
                <i class="fas fa-arrows-alt-h"></i>
            </button>
            <button class="btn btn-sm btn-secondary" @onclick="ViewVertical" title="Xem theo chiều dọc">
                <i class="fas fa-arrows-alt-v"></i>
            </button>
            <button class="btn btn-sm btn-outline-primary me-2" @onclick="ThumbtackHeader" title="Ghim tiêu đề bảng">
                <i class="fas fa-thumbtack"></i>
            </button>
        </div>
    </div>
