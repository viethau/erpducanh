
@code {
    [Parameter] public bool IsLoading { get; set; } // Xác định xem có đang loading hay không
    [Parameter] public string LoadingText { get; set; } = "Loading..."; // Văn bản hiển thị khi loading
}

@if (IsLoading)
{
    <div class="loading-overlay">
        <div class="spinner-border" role="status"></div>
        <p>@LoadingText</p>
    </div>
}
